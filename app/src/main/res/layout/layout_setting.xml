<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="35dp"
            android:src="@drawable/arrow_left">
        </ImageView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="@string/setting"
            android:textSize="48sp"
            android:gravity="center"
            android:textStyle="bold">
        </TextView>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </View>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/ip_config"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_weight="1">
            </TextView>
            <EditText
                android:id="@+id/ip"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textSize="30sp"
                android:textColor="@color/blue"
                android:gravity="center_vertical">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/port_config"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_weight="1">
            </TextView>
            <EditText
                android:id="@+id/port"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textSize="30sp"
                android:textColor="@color/blue"
                android:gravity="center_vertical">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/export_list_data"
                android:gravity="center"
                android:textSize="28sp"
                android:layout_weight="1">
            </TextView>
            <TextView
                android:id="@+id/name_file_export"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="abc"
                android:textSize="34sp"
                android:textColor="@color/blue"
                android:gravity="center_vertical"
                android:layout_marginStart="50dp">
            </TextView>
            <ImageView
                android:id="@+id/createDir"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:src="@drawable/portfolio">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/import_list_data"
                android:gravity="center"
                android:textSize="28sp"
                android:layout_weight="1">
            </TextView>
            <TextView
                android:id="@+id/name_file_import"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="abc"
                android:textSize="34sp"
                android:textColor="@color/blue"
                android:gravity="center_vertical"
                android:layout_marginStart="50dp">
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </View>
        <LinearLayout
            android:id="@+id/ln_save"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginHorizontal="100dp"
            android:background="@drawable/corner_button">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/save"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_weight="1">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
    </LinearLayout>

</LinearLayout>