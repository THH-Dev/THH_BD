<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg_home">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:layout_margin="25dp">

                </ImageView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6">
                </View>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:visibility="gone"
                    android:src="@drawable/logo_10y_done">
                </ImageView>
            </LinearLayout>
            <TextView
                android:id="@+id/title_register"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/white_text"
                android:textStyle="bold"
                android:textSize="80sp"
                android:gravity="center">
            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:layout_marginHorizontal="50dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginBottom="80dp"
                    android:layout_marginTop="35dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginVertical="20dp">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:src="@drawable/icon_ns">
                        </ImageView>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25">
                        </View>
                        <EditText
                            android:id="@+id/edit_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:hint="@string/fill_name"
                            android:maxLength="15"
                            android:padding="10dp"
                            android:textColorHint="@color/blue"
                            android:textColor="@color/blue"
                            android:textSize="28sp"
                            android:layout_margin="5dp"
                            android:background="@drawable/custom_bg_edit"
                            android:inputType="text">
                        </EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginVertical="20dp">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:src="@drawable/icon_co_quan">
                        </ImageView>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25">
                        </View>
                        <EditText
                            android:id="@+id/edit_company"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:padding="10dp"
                            android:maxLength="15"
                            android:hint="@string/fill_company"
                            android:textColorHint="@color/blue"
                            android:textColor="@color/blue"
                            android:layout_margin="5dp"
                            android:background="@drawable/custom_bg_edit"
                            android:textSize="28sp">
                        </EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginVertical="20dp"
                        android:visibility="visible">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:padding="10dp"
                            android:src="@drawable/icon_person_level">
                        </ImageView>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25">
                        </View>
                        <EditText
                            android:id="@+id/edit_age"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:padding="10dp"
                            android:maxLength="2"
                            android:hint="@string/fill_position"
                            android:textColorHint="@color/blue"
                            android:textColor="@color/blue"
                            android:textSize="28sp"
                            android:layout_margin="5dp"
                            android:background="@drawable/custom_bg_edit"
                            android:inputType="number">
                        </EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:layout_marginVertical="20dp">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:layout_margin="15dp"
                            android:src="@drawable/icon_person_level">
                        </ImageView>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25">
                        </View>
                        <EditText
                            android:id="@+id/edit_position"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:hint="@string/fill_position"
                            android:maxLength="15"
                            android:textColorHint="@color/white_text"
                            android:padding="10dp"
                            android:textColor="@color/white_text"
                            android:inputType="textNoSuggestions"
                            android:layout_margin="5dp"
                            android:background="@drawable/custom_bg_edit"
                            android:textSize="28sp">
                        </EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginVertical="25dp"
                        android:padding="30dp"
                        android:visibility="gone"
                        android:background="@drawable/bg_edittext">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:src="@drawable/user">
                        </ImageView>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                        </View>
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10">
                        </EditText>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </View>
                    <LinearLayout
                        android:id="@+id/btn_register"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/bg_btn_register">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:textSize="40sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/register"
                            android:textColor="@color/white"
                            android:src="@drawable/user">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
            </View>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>