<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ln_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ln_information"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:background="@color/white"
                android:visibility="visible"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/title_scan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/information_user"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_margin="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/logo"
                        app:layout_constraintEnd_toEndOf="parent">
                    </ImageView>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_marginHorizontal="50dp"
                    app:cardCornerRadius="25dp">
                    <LinearLayout
                        android:id="@+id/ctr_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.2"
                        android:orientation="vertical"
                        android:layout_marginVertical="30dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginBottom="15dp">
                            <ImageView
                                android:id="@+id/title_name"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:layout_constraintTop_toBottomOf="@+id/title_company"
                                app:layout_constraintStart_toStartOf="parent"
                                android:text="@string/position"
                                android:layout_margin="15dp"
                                android:src="@drawable/user">
                            </ImageView>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingEnd="15dp">
<!--                                <TextView-->
<!--                                    android:layout_width="match_parent"-->
<!--                                    android:layout_height="wrap_content"-->
<!--                                    android:text="@string/name_title"-->
<!--                                    android:textSize="20sp"-->
<!--                                    android:paddingStart="15dp"-->
<!--                                    android:layout_marginBottom="5dp">-->
<!--                                </TextView>-->
                                <TextView
                                    android:id="@+id/edit_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"
                                    android:gravity="center_vertical"
                                    android:text="THH"
                                    android:paddingStart="25dp"
                                    android:background="@drawable/bg_text"
                                    android:textSize="34sp"
                                    android:textStyle="bold">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginBottom="15dp">
                            <ImageView
                                android:id="@+id/title_age"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:layout_constraintTop_toBottomOf="@+id/title_company"
                                app:layout_constraintStart_toStartOf="parent"
                                android:text="@string/position"
                                android:layout_margin="15dp"
                                android:src="@drawable/age">
                            </ImageView>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingEnd="15dp">
<!--                                <TextView-->
<!--                                    android:layout_width="match_parent"-->
<!--                                    android:layout_height="wrap_content"-->
<!--                                    android:text="@string/age"-->
<!--                                    android:textSize="24sp"-->
<!--                                    android:paddingStart="15dp"-->
<!--                                    android:layout_marginBottom="5dp">-->
<!--                                </TextView>-->
                                <TextView
                                    android:id="@+id/edit_age"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"
                                    android:gravity="center_vertical"
                                    android:text="24"
                                    android:paddingStart="25dp"
                                    android:background="@drawable/bg_text"
                                    android:textSize="34sp"
                                    android:textStyle="bold">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ln_company"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginBottom="15dp">
                            <ImageView
                                android:id="@+id/title_company"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:layout_constraintTop_toBottomOf="@id/title_name"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_margin="15dp"
                                android:text="@string/company"
                                android:src="@drawable/building">
                            </ImageView>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingEnd="15dp">
<!--                                <TextView-->
<!--                                    android:layout_width="match_parent"-->
<!--                                    android:layout_height="wrap_content"-->
<!--                                    android:text="@string/company"-->
<!--                                    android:textSize="24sp"-->
<!--                                    android:paddingStart="15dp"-->
<!--                                    android:layout_marginBottom="5dp">-->
<!--                                </TextView>-->
                                <TextView
                                    android:id="@+id/edit_text_company"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:textStyle="bold"
                                    android:textSize="34sp"
                                    android:paddingStart="25dp"
                                    android:background="@drawable/bg_text"
                                    android:gravity="center_vertical"
                                    android:text="THH">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ln_position"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/viewStartEditText"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginBottom="15dp">
                            <ImageView
                                android:id="@+id/title_position"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:text="@string/name"
                                android:layout_margin="15dp"
                                android:src="@drawable/job_position">
                            </ImageView>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingEnd="15dp">
<!--                                <TextView-->
<!--                                    android:layout_width="match_parent"-->
<!--                                    android:layout_height="wrap_content"-->
<!--                                    android:text="@string/position"-->
<!--                                    android:textSize="20sp"-->
<!--                                    android:paddingStart="15dp"-->
<!--                                    android:layout_marginBottom="5dp">-->
<!--                                </TextView>-->
                                <TextView
                                    android:id="@+id/edit_text_position"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:background="@drawable/bg_text"
                                    android:gravity="center_vertical"
                                    android:layout_weight="3"
                                    android:textStyle="bold"
                                    android:textSize="34sp"
                                    android:paddingStart="25dp"
                                    android:text="Dev">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ln_qrcode"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/viewStartEditText"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginBottom="15dp">
                            <ImageView
                                android:id="@+id/title_id"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:layout_constraintTop_toBottomOf="@+id/title_position"
                                app:layout_constraintStart_toStartOf="parent"
                                android:text="@string/id"
                                android:layout_margin="15dp"
                                android:src="@drawable/qr_code">
                            </ImageView>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:paddingEnd="15dp"
                                android:gravity="center">
<!--                                <TextView-->
<!--                                    android:layout_width="match_parent"-->
<!--                                    android:layout_height="wrap_content"-->
<!--                                    android:text="@string/qrcode"-->
<!--                                    android:textSize="20sp"-->
<!--                                    android:paddingStart="15dp"-->
<!--                                    android:layout_marginBottom="5dp">-->
<!--                                </TextView>-->
                                <TextView
                                    android:id="@+id/edit_text_id"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:textStyle="bold"
                                    android:textSize="34sp"
                                    android:background="@drawable/bg_text"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="25dp"
                                    android:text="12312313">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:layout_marginHorizontal="30dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_description"
                            android:textSize="28sp"
                            android:text="@string/textDescription"
                            android:gravity="center"
                            app:layout_constraintTop_toBottomOf="@+id/ctr_data">
                        </TextView>
                        <View
                            android:id="@+id/viewLine"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black"
                            android:layout_marginHorizontal="100dp"
                            app:layout_constraintTop_toBottomOf="@id/text_description">
                        </View>
                        <TextView
                            android:id="@+id/text_request_camera"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.2"
                            android:text="@string/text_request_camera"
                            android:gravity="center_horizontal"
                            android:textSize="24sp"
                            android:layout_marginTop="25dp"
                            app:layout_constraintTop_toBottomOf="@+id/text_description"
                            android:paddingHorizontal="30dp">
                        </TextView>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cd_preview_cardView"
                        android:layout_width="325dp"
                        android:layout_height="325dp"
                        app:cardCornerRadius="200dp"
                        android:layout_marginBottom="4dp"
                        app:layout_constraintTop_toBottomOf="@id/ctr_data"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center">
                        <TextView
                            android:id="@+id/time_count_down"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="65sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:visibility="gone"
                            android:textColor="#FF0000"
                            android:text="3">
                        </TextView>
                        <LinearLayout
                            android:id="@+id/ln_camera"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone">
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <FrameLayout
                        android:id="@+id/fm_layout_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cd_image_cardView"
                            android:layout_width="325dp"
                            android:layout_height="325dp"
                            app:cardCornerRadius="200dp"
                            android:layout_marginBottom="4dp"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toBottomOf="@id/ctr_data"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/img_user"
                                android:layout_width="350dp"
                                android:layout_height="350dp"
                                android:scaleType="fitCenter"
                                app:layout_constraintTop_toBottomOf="@id/ctr_data"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                android:src="@drawable/user">
                            </ImageView>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="15dp"
                            android:gravity="end">
                            <ImageView
                                android:id="@+id/img_confirm"
                                android:layout_width="95dp"
                                android:layout_height="95dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/img_user"
                                app:layout_constraintStart_toEndOf="@id/btn_retry"
                                android:layout_marginVertical="15dp"
                                android:layout_marginHorizontal="40dp"
                                android:text="@string/confirm"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                android:src="@drawable/save">
                            </ImageView>
                        </LinearLayout>
                    </FrameLayout>
                    <ImageView
                        android:id="@+id/img_take_a_photo_a"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_request_camera"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/camera_blue">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">
        </View>
    </LinearLayout>

</FrameLayout>